// Filter cards view
function filterCardsView(searchTerm) {
    let visibleCount = 0;
    
    $('#products_cards_container > div').each(function() {
        const card = $(this);
        const productData = card.data('product');
        
        if (!productData) return;
        
        const name = (productData.name || '').toLowerCase();
        const barcode = (productData.barcode || '').toLowerCase();
        
        if (searchTerm === '' || name.includes(searchTerm) || barcode.includes(searchTerm)) {
            card.show();
            visibleCount++;
        } else {
            card.hide();
        }
    });
    
    // Show "no results" message if needed
    if (visibleCount === 0 && searchTerm !== '') {
        if ($('#no_results_cards').length === 0) {
            $('#products_cards_container').append(`
