// Load inventory stock levels
function loadInventoryStock() {
    console.log('=== Loading inventory stock ===');
    
    const currencySymbol = (typeof settings !== 'undefined' && settings.symbol) ? settings.symbol : 'DH';
    
    $.ajax({
        url: api + 'inventory/all',
        type: 'GET',
        dataType: 'json',
        success: function(products) {
            console.log('‚úì Products loaded:', products.length);
            
            const tbody = $('#inventory_stock_list');
            tbody.empty();
            
            if (products.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="7" style="text-align: center; padding: 40px;">
                            <i class="fa fa-inbox" style="font-size: 48px; color: #ccc;"></i>
                            <h4 style="margin-top: 15px; color: #999;">No products found</h4>
                            <p style="color: #999;">Add products first to manage inventory</p>
                        </td>
                    </tr>
                `);
            } else {
                products.forEach(function(product) {
                    const imgSrc = product.img ? img_path + product.img : 'assets/images/no-image.png';
                    const stock = product.stock || 0;
                    // Color coding: < 5 = red, 5-10 = orange, > 10 = green
                    const stockClass = stock < 5 ? 'label-danger' : (stock <= 10 ? 'label-warning' : 'label-success');
                    
                    const row = `
                        <tr>
                            <td><img src="${imgSrc}" alt="${product.name}" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;"></td>
                            <td><strong>${product.name}</strong></td>
                            <td>${product.barcode || 'N/A'}</td>
                            <td>${product.category_name || 'N/A'}</td>
                            <td><span class="label ${stockClass}" style="font-size: 14px; padding: 6px 12px;">${stock}</span></td>
                            <td>${product.price} ${currencySymbol}</td>
                            <td>
                                <button class="btn btn-warning btn-sm waves-effect edit-stock" data-id="${product._id}" data-name="${product.name}" data-stock="${stock}">
                                    <i class="fa fa-edit"></i> Edit Stock
                                </button>
                            </td>
                        </tr>
                    `;
                    tbody.append(row);
                });
                
                // Update stats
                $('#total_products_count').text(products.length);
            }
        },
        error: function(error) {
            console.error('Error loading inventory:', error);
            Swal.fire('Error', 'Failed to load inventory', 'error');
        }
    });
}

