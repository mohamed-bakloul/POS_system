$('#addPurchaseForm').submit(function(e) {
    e.preventDefault();
    console.log('Submitting purchase form...');
    
    const supplier = $('#purchase_supplier').val().trim();
    const notes = $('#purchase_notes').val().trim();
    
    // Collect all items
    const items = [];
    let hasError = false;
    
    $('.purchase-item-row').each(function() {
        const productSelect = $(this).find('.purchase-product');
        const productId = productSelect.val();
        const productName = productSelect.find('option:selected').data('name');
        const quantity = parseFloat($(this).find('.purchase-quantity').val());
        const buyingPrice = parseFloat($(this).find('.purchase-buying-price').val());
        
        if (!productId || !quantity || !buyingPrice) {
            hasError = true;
            return false;
        }
        
        items.push({
            productId: productId,
            productName: productName,
            quantity: quantity,
            buyingPrice: buyingPrice
        });
    });
    
    if (hasError || items.length === 0) {
        Swal.fire('Error', 'Please fill in all fields for at least one item', 'error');
        return;
    }
    
    // Calculate total
    const totalAmount = items.reduce((sum, item) => sum + (item.quantity * item.buyingPrice), 0);
    
    const purchaseData = {
        supplier: supplier,
        notes: notes,
        items: items,
        totalAmount: totalAmount
    };
    
    console.log('Purchase data:', purchaseData);
    
    $('.loading').show();
    
    $.ajax({
        url: api + 'purchases/add',
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify(purchaseData),
        success: function(response) {
            console.log('Purchase added:', response);
            $('.loading').hide();
            
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Purchase added and stock updated successfully',
                timer: 2000,
                showConfirmButton: false
            });
            
            $('#addPurchaseModal').modal('hide');
            loadInventoryPurchases();
        },
        error: function(error) {
            console.error('Error adding purchase:', error);
            $('.loading').hide();
            Swal.fire('Error', 'Failed to add purchase', 'error');
        }
    });
});

// Delete Purchase
$(document).on('click', '.delete-purchase', function() {
    const purchaseId = $(this).data('id');
    
    Swal.fire({
        title: 'Are you sure?',
        text: 'This will delete the purchase record (stock will NOT be affected)',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                url: api + 'purchases/delete',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ id: purchaseId }),
                success: function(response) {
                    console.log('Purchase deleted:', response);
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Deleted!',
                        text: 'Purchase record has been deleted.',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    
                    loadInventoryPurchases();
                },
                error: function(error) {
                    console.error('Error deleting purchase:', error);
                    Swal.fire('Error', 'Failed to delete purchase', 'error');
                }
            });
        }
    });
});

// Language Selector Handler
$(document).ready(function() {
    // Set current language in selector
    const currentLang = window.i18n.getLanguage();
    $('#language_selector').val(currentLang);
    
    // Handle language change
    $('#language_selector').change(function() {
        const newLang = $(this).val();
        console.log('Changing language to:', newLang);
        
        if (window.i18n.setLanguage(newLang)) {
            // Apply translations
            if (window.translateUI) {
                window.translateUI();
            }
            
            // Reload to apply translations everywhere
            Swal.fire({
                title: window.t('msg.success') || 'Success!',
                text: 'Language changed',
                icon: 'success',
                timer: 1500,
                showConfirmButton: false
            }).then(() => {
                location.reload();
            });
        }
    });
});


