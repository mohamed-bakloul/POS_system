// Calculate Total Amount
function calculatePurchaseTotal() {
    const currencySymbol = (typeof settings !== 'undefined' && settings.symbol) ? settings.symbol : 'DH';
    let total = 0;
    
    $('.purchase-item-row').each(function() {
        const quantity = parseFloat($(this).find('.purchase-quantity').val()) || 0;
        const price = parseFloat($(this).find('.purchase-buying-price').val()) || 0;
        total += quantity * price;
    });
    
    $('#purchase_total_amount').text(total.toFixed(2) + ' ' + currencySymbol);
}

