// Render Table View
function renderTableView() {
    console.log('Rendering table view...');
    
    // Hide cards, show table
    $('#products_cards_view').hide();
    $('#products_table_view').show();
    
    // Get currency symbol
    const currencySymbol = (typeof settings !== 'undefined' && settings.symbol) ? settings.symbol : 'DH';
    
    // Destroy existing DataTable if it exists
    if (productsManagementTable) {
        productsManagementTable.destroy();
        productsManagementTable = null;
    }
    
    // Clear the table
    $('#products_management_list').empty();
    
    if (productsData.length === 0) {
        $('#products_management_list').html('<tr><td colspan="6" style="text-align: center;">No products found</td></tr>');
        return;
    }
    
    // Populate table
    productsData.forEach(function(product) {
        const imgSrc = product.img ? img_path + product.img : 'assets/images/no-image.png';
        const categoryName = product.category_name || 'N/A';
        
        const row = `
            <tr data-product-id="${product._id}">
                <td>${product.barcode || 'N/A'}</td>
                <td><img src="${imgSrc}" alt="${product.name}" style="width: 50px; height: 50px; object-fit: cover;"></td>
                <td>${product.name}</td>
                <td>${product.price} ${currencySymbol}</td>
                <td>${categoryName}</td>
                <td>
                    <button class="btn btn-sm btn-info edit-product" data-id="${product._id}">
                        <i class="fa fa-edit"></i> <span data-i18n="btn.edit">Edit</span>
                    </button>
                    <button class="btn btn-sm btn-danger delete-product" data-id="${product._id}">
                        <i class="fa fa-trash"></i> <span data-i18n="btn.delete">Delete</span>
                    </button>
                </td>
            </tr>
        `;
        $('#products_management_list').append(row);
    });
    
    // Initialize DataTable
    try {
        productsManagementTable = $('#productsManagementTable').DataTable({
            language: window.getDataTablesLanguage(),
            searching: false,  // Disable built-in search
            dom: 'lrtip'       // Remove search box from DOM (l=length, r=processing, t=table, i=info, p=pagination)
        });
        console.log('‚úì DataTable initialized');
    } catch (e) {
        console.error('DataTable error:', e);
    }
}

